{
  "name": "qfzcm/smile-common",
  "type": "library",
  "license": "MIT",
  "homepage":"https://github.com/qfzcm/smile-common",
  "keywords": [
    "php",
    "hyperf"
  ],
  "description": "",
  "autoload": {
    "psr-4": {
      "Smile\\Common\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTest\\": "tests"
    }
  },
  "require": {
    "php": ">=7.4",
    "ext-bcmath": "*",
    "ext-json": "*",
    "hyperf/database": "~2.1",
    "hyperf/db-connection": "~2.1",
    "hyperf/di": "~2.1.0",
    "hyperf/framework": "~2.1.0",
    "hyperf/logger": "~2.1.0",
    "hyperf/model-cache": "~2.1",
    "hyperf/redis": "~2.1.0",
    "hyperf/validation": "~2.1.0",
    "qfzcm/graphql-php": "master-dev"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.14",
    "hyperf/constants": "~2.1",
    "mockery/mockery": "^1.0",
    "phpstan/phpstan": "^0.12",
    "phpunit/phpunit": ">=7.0",
    "swoole/ide-helper": "dev-master",
    "swow/swow": "dev-develop",
    "symfony/var-dumper": "^5.1"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml --colors=always",
    "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
    "cs-fix": "php-cs-fixer fix $1"
  },
  "extra": {
    "hyperf": {
      "config": "Smile\\Common\\ConfigProvider"
    }
  }
}
